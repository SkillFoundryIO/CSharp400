@model ContactForm
@{
    ViewData["Title"] = "Create Contact";
}

<h2>Create Contact</h2>
<form asp-controller="Contacts" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label asp-for="Contact.Name"></label>
        <input asp-for="Contact.Name" />
    </div>
    <div>
        <label asp-for="Contact.Email"></label>
        <input asp-for="Contact.Email" type="email" />
    </div>
    <div>
        <label asp-for="Contact.CountryCode"></label>
        <select asp-for="Contact.CountryCode" asp-items="Model.Countries"></select>
    </div>
    <div>
        <button type="submit">Save</button>
    </div>
</form>
